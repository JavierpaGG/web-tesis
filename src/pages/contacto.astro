---
// src/pages/contacto.astro
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import ChatBot from "../components/ChatBot.astro";
import "@fortawesome/fontawesome-free/css/all.min.css";
---

<Layout>
  <Header />

  <!-- Hero Section Mejorada -->
  <section class="relative bg-gradient-to-br from-indigo-900 via-purple-800 to-indigo-900 text-white py-32 md:py-40 overflow-hidden">
    <div class="absolute inset-0 z-0">
      <div class="absolute inset-0 bg-black opacity-40"></div>
      <div class="absolute bottom-0 left-0 right-0 h-1/3 bg-gradient-to-t from-gray-900 to-transparent"></div>
      <div class="absolute top-0 right-0 opacity-20">
        <div class="w-64 h-64 rounded-full bg-yellow-400 filter blur-3xl"></div>
      </div>
    </div>

    <div class="container mx-auto px-6 text-center relative z-10">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight">
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-yellow-300 via-yellow-400 to-yellow-500 animate-text">Contáctanos</span>
      </h1>
      <p class="text-xl md:text-2xl mb-8 max-w-3xl mx-auto opacity-90 font-light">
        Estamos aquí para responder tus preguntas y apoyar tu experiencia educativa
      </p>
    </div>
  </section>
<!-- Información de Contacto Mejorada -->
<section class="py-20 bg-gradient-to-br from-gray-50 to-gray-100">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-5xl mx-auto bg-white rounded-3xl shadow-2xl overflow-hidden border border-gray-100 transform hover:shadow-xl transition-all duration-300">
      
      <!-- Encabezado -->
      <div class="bg-gradient-to-r from-indigo-600 to-purple-600 p-6 text-center">
        <h2 class="text-2xl sm:text-3xl font-bold text-white">Información de Contacto</h2>
        <p class="text-indigo-100 mt-2 text-sm sm:text-base">Estamos disponibles para atenderte</p>
      </div>

      <!-- Contenido -->
      <div class="grid grid-cols-1 md:grid-cols-2 divide-y md:divide-y-0 md:divide-x divide-gray-100">
        
        <!-- Columna Izquierda -->
        <div class="p-6 sm:p-8 md:p-10 flex flex-col gap-8">
          <!-- Dirección -->
          <div class="flex items-start gap-4 group min-h-[140px]">
            <div class="bg-indigo-100 p-4 rounded-xl transform group-hover:rotate-6 transition">
              <i class="fas fa-map-marker-alt text-indigo-600 text-2xl"></i>
            </div>
            <div>
              <h3 class="text-lg sm:text-xl font-bold text-gray-800 mb-1">Dirección</h3>
              <p class="text-gray-600 text-sm sm:text-base">Av. Jose Matias Manzanilla N° 187</p>
              <p class="text-gray-600 text-sm sm:text-base">Ica, Perú</p>
              <a
                href="https://maps.app.goo.gl/YZjxpv6i4k1ziM4c8"
                target="_blank"
                class="inline-flex items-center mt-3 text-indigo-600 hover:text-indigo-800 font-medium transition text-sm sm:text-base"
              >
                <span>Ver en mapa</span>
                <i class="fas fa-arrow-right ml-2 text-xs transform group-hover:translate-x-1 transition"></i>
              </a>
            </div>
          </div>

          <!-- Horario -->
          <div class="flex items-start gap-4 group min-h-[140px]">
            <div class="bg-yellow-100 p-4 rounded-xl transform group-hover:rotate-6 transition">
              <i class="fas fa-clock text-yellow-600 text-2xl"></i>
            </div>
            <div>
              <h3 class="text-lg sm:text-xl font-bold text-gray-800 mb-1">Horario</h3>
              <p class="text-gray-600 text-sm sm:text-base">Lunes a Viernes:</p>
              <p class="text-gray-600 font-medium text-sm sm:text-base">7:45 am - 6:30 pm</p>
            </div>
          </div>
        </div>

        <!-- Columna Derecha -->
        <div class="p-6 sm:p-8 md:p-10 flex flex-col gap-8">
          <!-- Correo -->
          <div class="flex items-start gap-4 group min-h-[140px]">
            <div class="bg-blue-100 p-4 rounded-xl transform group-hover:rotate-6 transition">
              <i class="fas fa-envelope text-blue-600 text-2xl"></i>
            </div>
            <div>
              <h3 class="text-lg sm:text-xl font-bold text-gray-800 mb-1">Correo Electrónico</h3>
              <p class="text-gray-600 text-sm sm:text-base">Mesa de partes:</p>
              <a href="mailto:mesadepartes@ieslg.edu.pe" class="text-blue-600 hover:text-blue-800 font-medium break-all text-sm sm:text-base">
                mesadepartes@ieslg.edu.pe
              </a>
            </div>
          </div>

          <!-- Redes Sociales -->
          <div class="flex items-start gap-4 group min-h-[140px]">
            <div class="bg-pink-100 p-4 rounded-xl transform group-hover:rotate-6 transition">
              <i class="fab fa-facebook-f text-pink-600 text-2xl"></i>
            </div>
            <div>
              <h3 class="text-lg sm:text-xl font-bold text-gray-800 mb-1">Redes Sociales</h3>
              <a
                href="https://www.facebook.com/iesanluisgonzagadeica?locale=es_LA"
                target="_blank"
                class="inline-flex items-center text-pink-600 hover:text-pink-800 font-medium transition text-sm sm:text-base"
              >
                <span>Facebook Institucional</span>
                <i class="fas fa-external-link-alt ml-2 text-xs"></i>
              </a>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</section>


  <!-- Mapa Mejorado -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-6">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-800">
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-indigo-600 to-purple-600">Visítanos</span> en Ica
        </h2>
        <p class="text-gray-600 max-w-2xl mx-auto mt-3">
          Nuestras instalaciones están preparadas para recibirte
        </p>
      </div>

      <div class="rounded-2xl overflow-hidden shadow-2xl border-2 border-white transform hover:scale-[1.01] transition duration-300">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3850.3466823867023!2d-75.73048782573489!3d-14.067003786408143!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x9110e296f1b3abf3%3A0x29d27e7be6f50717!2sAv.%20Jos%C3%A9%20Mat%C3%ADas%20Manzanilla%20187%2C%20Ica%2011001!5e0!3m2!1ses-419!2spe!4v1688574048014!5m2!1ses-419!2spe"
          width="100%"
          height="450"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          class="w-full"
        ></iframe>
      </div>

      <div class="mt-8 text-center">
        <a
          href="https://maps.app.goo.gl/YZjxpv6i4k1ziM4c8"
          target="_blank"
          class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-indigo-600 to-purple-600 text-white rounded-full font-bold hover:from-indigo-700 hover:to-purple-700 transition duration-300 shadow-lg hover:shadow-xl"
        >
          <i class="fas fa-directions mr-2"></i> Cómo llegar
        </a>
      </div>
    </div>
  </section>

  <ChatBot />
  <Footer />
</Layout>

<style is:global>
  .animate-text {
    background-size: 200% auto;
    animation: gradientText 3s ease infinite;
  }

  @keyframes gradientText {
    0% { background-position: 0% center; }
    50% { background-position: 100% center; }
    100% { background-position: 0% center; }
  }
</style>